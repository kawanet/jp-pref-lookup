{
  "include": [
    "lib/"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "outDir": "build/esm/",
    "skipLibCheck": false,
    "strictNullChecks": true,
    "target": "ES2018"
  }
}
