{
  "include": [
    "lib/",
    "src/",
    "test/"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "target": "ES2021"
  }
}
